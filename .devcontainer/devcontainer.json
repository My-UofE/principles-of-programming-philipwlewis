{
  "image": "mcr.microsoft.com/devcontainers/miniconda",
  "hostRequirements": {
    "cpus": 1
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "" ,
  "postCreateCommand": "mv ~/.bashrc ~/.bashrc.bk ;  ln -s /workshop/$RepositoryName/.profile/bashrc ~/.bashrc ; echo setup bashrc; mv ~/.bash_history ~/.bash_history.bk ;  ln -s /workshop/$RepositoryName/.profile/bash_history ~/.bash_history ; echo setup bash_history",
  "customizations": {
    "codespaces": {
      "openFiles": [],
      "remote.autoForwardPorts": false
    },
    "vscode": {
      "extensions": [
        "ms-python.python"
      ],
      "settings": {
        "chat.disableAIFeatures": true,
        "chat.agent.enabled": false,
        "editor.tabSize": 4,
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          }
        }
      }
    }
  }
}
        
